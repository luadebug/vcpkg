@PACKAGE_INIT@

set(VARIANT_INCLUDE_DIRS "@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@")

if(NOT TARGET variant::variant)
    add_library(variant::variant INTERFACE IMPORTED)
    set_target_properties(variant::variant PROPERTIES
        INTERFACE_INCLUDE_DIRECTORIES "${VARIANT_INCLUDE_DIRS}"
        INTERFACE_COMPILE_FEATURES "cxx_std_11"
    )

    if(APPLE)
        set_property(TARGET variant::variant APPEND PROPERTY
            INTERFACE_LINK_OPTIONS "-framework CoreFoundation"
        )
    endif()
endif()

find_dependency(Boost CONFIG REQUIRED COMPONENTS timer system chrono)

if(UNIX AND NOT APPLE)
    set_property(TARGET variant::variant APPEND PROPERTY
        INTERFACE_LINK_LIBRARIES "rt"
    )
endif()

check_required_components(variant)
